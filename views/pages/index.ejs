<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <script>
    window.setInterval(function() {
      var elem = document.getElementById('chat');
      elem.scrollTop = elem.scrollHeight;
    }, 50);
    </script>
</head>
<body>

    <header>
        <% include ../partials/header %>
    </header>

    <main>
      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="row placeholders">

          <div class="col-xs-6 col-sm-3 placeholder">
            <img src="<%=follow.image %>" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
            <h4>Latest Follower</h4>
            <span class="text-muted"><%=follow.name %></span>
          </div>
          <div class="col-xs-6 col-sm-3 placeholder">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
            <h4>Latest Sub</h4>
            <span class="text-muted">Subscriber name</span>
          </div>
          <div class="col-xs-6 col-sm-3 placeholder">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
            <h4>Top Donor</h4>
            <span class="text-muted">Top Donor Name</span>
          </div>
          <div class="col-xs-6 col-sm-3 placeholder">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
            <h4>Giveaway Winner</h4>
            <span class="text-muted">Giveaway Winner Name</span>
          </div>
        </div>

              <h3>Twitch Chat</h3>



              <div id="chat" style="overflow-y: scroll; height:100px;"></div>


              <div class="table-responsive">

                <script src="main2.js"></script>

                <table class="table table-striped">
                  <thead>
                    <h3>Discord Chat</h3>
                    <tr>
                      <th>Time</th>
                      <th>Username</th>
                      <th>Message</th>
                      <th>Ban</th>
                      <th>Timeout</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>10:11:13</td>
                      <td>infomessanger</td>
                      <td>This is a message from a discord server stream themed chat room</td>
                      <td><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span></td>
                      <td><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span></td>
                    </tr>
                    <tr>
                      <td>10:11:14</td>
                      <td>CPT_Obvious</td>
                      <td>messages go here duh</td>
                      <td><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span></td>
                      <td><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span></td>
                    </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    </main>
    <script>$(".<%=classi%>").removeClass("<%=classi%>").addClass("active")</script>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
